<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="5dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/formContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/optionActionIconImageView"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/corelib_information"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/optionActionInformationOneTextView"
            style="@style/text_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:text="@string/corelib_information"
            app:layout_constraintStart_toEndOf="@+id/optionActionIconImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/optionActionDescriptionOneTextView"
            style="@style/text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/corelib_information"
            app:layout_constraintStart_toEndOf="@+id/optionActionIconImageView"
            app:layout_constraintTop_toTopOf="@id/optionActionInformationOneTextView" />

        <TextView
            android:id="@+id/optionActionInformationTwoTextView"
            style="@style/text_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="@string/corelib_information"
            app:layout_constraintEnd_toStartOf="@+id/optionActionImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/optionActionDescriptionTwoTextView"
            style="@style/text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="@string/corelib_information"
            app:layout_constraintEnd_toStartOf="@+id/optionActionImageView"
            app:layout_constraintTop_toTopOf="@id/optionActionInformationTwoTextView" />

        <ImageView
            android:id="@+id/optionActionImageView"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:contentDescription="@string/corelib_information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/optionActionDividerView"
            style="@style/CommonHorizontalDivider"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionActionIconImageView" />

        <com.example.corelib.informational.InformationView
            android:id="@+id/informationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/optionActionDividerView"
            app:text="@string/corelib_information" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
