<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentDescription="@string/corelib_information"
        android:src="@drawable/ic_keyboard_arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.corelib.informational.InformationLineItemView
        android:id="@+id/orderCreatedTimeInformationLineItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:informationLineItemViewLabel="@string/created_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrowImageView" />

    <com.example.corelib.informational.InformationLineItemView
        android:id="@+id/orderCompletedTimeInformationLineItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:informationLineItemViewLabel="@string/completed_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderCreatedTimeInformationLineItemView"/>
</androidx.constraintlayout.widget.ConstraintLayout>