<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.corelib.buttons.OptionActionView
            android:id="@+id/donateBtcOptionOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optionActionViewText="@string/btc"
            app:optionActionViewIcon="@drawable/btc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.example.corelib.buttons.OptionActionView
            android:id="@+id/donateXrpOptionOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optionActionViewText="@string/xrp"
            app:optionActionViewIcon="@drawable/xrp"
            app:layout_constraintTop_toBottomOf="@+id/donateBtcOptionOptionActionView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.example.corelib.buttons.OptionActionView
            android:id="@+id/donateEthOptionOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optionActionViewText="@string/eth"
            app:optionActionViewIcon="@drawable/etc"
            app:layout_constraintTop_toBottomOf="@+id/donateXrpOptionOptionActionView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.example.corelib.buttons.OptionActionView
            android:id="@+id/donateLtcOptionOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optionActionViewText="@string/ltc"
            app:optionActionViewIcon="@drawable/ltc"
            app:layout_constraintTop_toBottomOf="@+id/donateEthOptionOptionActionView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>