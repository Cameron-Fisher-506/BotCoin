<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.corelib.buttons.OptionActionView
            android:id="@+id/sendOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:optionActionViewIcon="@drawable/ic_send_black_24dp"
            app:optionActionViewText="@string/send" />

        <com.example.corelib.buttons.OptionActionView
            android:id="@+id/receiveOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sendOptionActionView"
            app:optionActionViewIcon="@drawable/ic_call_received_black_24dp"
            app:optionActionViewText="@string/receive" />

        <com.example.corelib.buttons.OptionActionView
            android:id="@+id/ordersOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/receiveOptionActionView"
            app:optionActionViewIcon="@drawable/ic_history_black_24dp"
            app:optionActionViewText="@string/orders" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>