<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.corelib.informational.OptionActionView
            android:id="@+id/lunoApiOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optionActionViewText="@string/luno_api"
            app:optionActionViewIcon="@drawable/api"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:text="@string/resistance_price_counter" />

        <com.example.corelib.informational.OptionActionView
            android:id="@+id/donateOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optionActionViewText="@string/donate"
            app:optionActionViewIcon="@drawable/ic_send_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/lunoApiOptionActionView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:text="@string/resistance_price_counter" />

        <com.example.corelib.informational.OptionActionView
            android:id="@+id/notificationsOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optionActionViewText="@string/notifications"
            app:optionActionViewIcon="@drawable/ic_notifications_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/donateOptionActionView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:text="@string/resistance_price_counter" />

        <com.example.corelib.informational.OptionActionView
            android:id="@+id/trailingStartOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optionActionViewText="@string/trailing_start"
            app:optionActionViewIcon="@drawable/ic_baseline_attach_money_24"
            app:layout_constraintTop_toBottomOf="@+id/notificationsOptionActionView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:text="@string/resistance_price_counter" />

        <com.example.corelib.informational.OptionActionView
            android:id="@+id/trailingStopOptionActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optionActionViewText="@string/trailing_stop"
            app:optionActionViewIcon="@drawable/ic_money_off_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/trailingStartOptionActionView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:text="@string/resistance_price_counter" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/setSupportPriceCounterLinearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trailingStopOptionActionView">

            <ImageView
                android:id="@+id/setSupportPriceCounterImageView"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/DummyText"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/setSupportPriceCounterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/support_price_counter"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:contentDescription="@string/DummyText" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/setSupportPriceCounterDividerView"
            style="@style/CommonHorizontalDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setSupportPriceCounterLinearLayoutCompat" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/setResistancePriceCounterLinearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setSupportPriceCounterLinearLayoutCompat">

            <ImageView
                android:id="@+id/setResistancePriceCounterImageView"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/DummyText"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/setResistancePriceCounterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resistance_price_counter"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:contentDescription="@string/DummyText" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/SetResistancePriceCounterDividerView"
            style="@style/CommonHorizontalDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setResistancePriceCounterLinearLayoutCompat" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/setSmartTrendDetectorMarginLinearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setResistancePriceCounterLinearLayoutCompat">

            <ImageView
                android:id="@+id/setSmartTrendDetectorMarginImageView"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/DummyText"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/setSmartTrendDetectorMarginTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/smart_trend_detector_margin"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:contentDescription="@string/DummyText" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/setSmartTrendMarginDividerView"
            style="@style/CommonHorizontalDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setSmartTrendDetectorMarginLinearLayoutCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>