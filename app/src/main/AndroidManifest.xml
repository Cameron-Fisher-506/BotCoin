<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.ticker">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_data_exploration_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_data_exploration_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ticker">
        <activity android:name=".view.home.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.settings.AutoTradeActivity"/>
        <activity android:name="za.co.ticker.view.trade.TradeActivity"/>
        <activity android:name=".view.wallet.WalletActivity"/>
        <activity android:name=".view.menu.MenuActivity"/>

        <service android:name="za.co.ticker.services.BotService"/>
    </application>

</manifest>